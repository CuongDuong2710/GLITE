<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen6dp"
    android:layout_marginTop="@dimen/dimen6dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen3dp"
    android:paddingRight="@dimen/dimen3dp">


    <Button
        android:id="@+id/button_our_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/buttonour_menu_text_inacitve" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen3dp"
        android:layout_marginRight="@dimen/dimen3dp"
        android:layout_weight="1"
        android:background="@drawable/bg_item_cart_inactive"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen6dp"
        android:paddingRight="@dimen/dimen6dp">

        <ImageView
            android:id="@+id/button_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen3dp"
            android:src="@drawable/icon_cart_inactive" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen3dp">

            <TextView
                android:id="@+id/text_number_item"
                style="@style/OrangeStyle17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen6dp"
                android:layout_marginRight="@dimen/dimen6dp"
                android:text="0" />

            <TextView
                android:id="@+id/text_items"
                style="@style/TextStyleWhite17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/buttoncheckout_text_inacitve" />

</LinearLayout>