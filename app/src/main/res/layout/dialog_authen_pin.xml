<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="@dimen/dimen6dp"
        android:layout_marginRight="@dimen/dimen6dp"
        android:background="@drawable/mask"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_enter_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen6dp"
            android:layout_marginTop="@dimen/dimen18dp"
            android:gravity="center"
            android:padding="@dimen/dimen6dp"
            android:text="@string/text_please_enter_pin"
            style="@style/text.rouge.18sp"/>

        <View
            android:id="@+id/line_divider"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_below="@id/text_enter_pin"
            android:background="@drawable/bg_line" />

        <LinearLayout
            android:id="@+id/layout_edit_text_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/dimen32dp"
            android:layout_marginLeft="@dimen/dimen16dp"
            android:layout_marginRight="@dimen/dimen16dp"
            android:gravity="center"
            android:layout_below="@id/line_divider"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/text_num1"
                android:layout_width="@dimen/dimen32dp"
                android:layout_height="@dimen/dimen6dp"
                android:layout_marginEnd="@dimen/dimen18dp"
                android:layout_marginRight="@dimen/dimen18dp"
                android:background="@drawable/bg_enter_pin"
                android:inputType="numberPassword"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/text_num2"
                android:layout_width="@dimen/dimen32dp"
                android:layout_height="@dimen/dimen6dp"
                android:layout_marginEnd="@dimen/dimen18dp"
                android:layout_marginRight="@dimen/dimen18dp"
                android:background="@drawable/bg_enter_pin"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/text_num3"
                android:layout_width="@dimen/dimen32dp"
                android:layout_height="@dimen/dimen6dp"
                android:layout_marginEnd="@dimen/dimen18dp"
                android:layout_marginRight="@dimen/dimen18dp"
                android:background="@drawable/bg_enter_pin"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:maxLength="1"/>


            <EditText
                android:id="@+id/text_num4"
                android:layout_width="@dimen/dimen32dp"
                android:layout_height="@dimen/dimen6dp"
                android:layout_marginEnd="@dimen/dimen18dp"
                android:layout_marginRight="@dimen/dimen18dp"
                android:background="@drawable/bg_enter_pin"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/text_num5"
                android:layout_width="@dimen/dimen32dp"
                android:layout_height="@dimen/dimen6dp"
                android:layout_marginEnd="@dimen/dimen18dp"
                android:layout_marginRight="@dimen/dimen18dp"
                android:background="@drawable/bg_enter_pin"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/text_num6"
                android:layout_width="@dimen/dimen32dp"
                android:layout_height="@dimen/dimen6dp"
                android:background="@drawable/bg_enter_pin"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:maxLength="1"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/key_pad"/>

</RelativeLayout>