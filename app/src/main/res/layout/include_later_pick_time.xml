<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleWhite13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen6dp"
            android:text="@string/text_month" />

        <TextView
            style="@style/TextStyleWhite13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mins_inactive"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen10dp"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingRight="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:text="June" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen6dp"
        android:layout_marginRight="@dimen/dimen6dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleWhite13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen6dp"
            android:text="@string/text_day" />

        <TextView
            style="@style/TextStyleWhite13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mins_inactive"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingStart="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp"
            android:paddingEnd="@dimen/dimen24dp"
            android:text="20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleWhite13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen6dp"
            android:text="@string/text_delivery_time" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextStyleWhite13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen4dp"
                android:layout_marginRight="@dimen/dimen4dp"
                android:background="@drawable/hour_inactive"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:paddingRight="@dimen/dimen10dp"
                android:paddingStart="@dimen/dimen10dp"
                android:text="10" />

            <TextView
                style="@style/TextStyleWhite13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mins_inactive"
                android:gravity="center"
                android:text="0 PM" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>