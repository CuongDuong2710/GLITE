<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen18dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_order_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen3dp"
                android:text="@string/text_order_id"
                android:textAllCaps="true"
                style="@style/text.orange.17sp"/>

            <TextView
                android:id="@+id/text_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen3dp"
                android:text="#9999999"
                style="@style/text.orange.17sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_order_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen3dp"
            android:text="@string/text_order_received"
            android:textAllCaps="true"
            style="@style/text.orange.17sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="@dimen/dimen18dp"
            android:layout_marginRight="@dimen/dimen18dp"
            android:layout_marginTop="@dimen/dimen12dp"

            android:background="@drawable/bg_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen6dp"
        android:paddingTop="@dimen/dimen6dp">


        <TextView
            style="@style/TextButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingStart="@dimen/dimen24dp"
            android:text="@string/text_we_will_have_your_order_delivered_by" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen6dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp">

            <TextView
                style="@style/text.blue.14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen32dp"
                android:layout_marginRight="@dimen/dimen32dp"
                android:text="1 June 2016"
                android:id="@+id/order_date"/>

            <TextView
                style="@style/text.blue.14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginStart="@dimen/dimen32dp"
                android:text="10:06 AM" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@style/text.white.bold18sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_normal"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginTop="@dimen/dimen6dp"
        android:background="@drawable/bg_rouge_selector"
        android:text="@string/text_ok" />

</LinearLayout>