<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="344dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dimen8dp"
    android:layout_marginRight="@dimen/dimen8dp"
    android:layout_marginTop="240dp"
    android:layout_marginBottom="240dp">

    <com.glite.popeyes.view.custom.VerdanaTextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_delivery_is_not_available_at_this_location"
        android:textSize="12sp"
        android:textColor="#c41230"
        android:layout_marginLeft="@dimen/dimen12dp"
        android:layout_marginTop="@dimen/dimen20dp"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <com.glite.popeyes.view.custom.VerdanaTextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_would_you_like_to_enter_postal_code"
        android:layout_below="@id/text_title"
        style="@style/TextStyleBlue14"
        android:layout_marginLeft="@dimen/dimen12dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:textStyle="bold"/>

    <com.glite.popeyes.view.custom.CustomButtonIcon
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_normal"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="24dp"
        app:btn_background="@drawable/buttonstart_order"
        app:btn_text="@string/ok"
        app:btn_text_capital="true">
    </com.glite.popeyes.view.custom.CustomButtonIcon>

</RelativeLayout>