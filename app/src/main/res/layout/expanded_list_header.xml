<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/group_header">

    <TextView
        android:id="@+id/label_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_446"
        android:text="@string/text_select_choice_of_flavaours_for_your_9_pc_chicken"
        style="@style/TextStyleWhite14"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/icon_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iconcollapsed"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen14dp"
        android:layout_marginRight="@dimen/dimen14dp"/>

</RelativeLayout>