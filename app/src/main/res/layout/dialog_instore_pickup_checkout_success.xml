<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_black_pop_up_checkout"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen18dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_order_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen3dp"
                android:text="@string/text_order_id"
                android:textAllCaps="true"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen3dp"
                android:text="#9999999"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_order_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen3dp"
            android:text="@string/text_order_received"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="@dimen/dimen18dp"
            android:layout_marginRight="@dimen/dimen18dp"
            android:layout_marginTop="@dimen/dimen12dp"

            android:background="@drawable/line_pickup" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen6dp"
        android:paddingTop="@dimen/dimen6dp">


        <TextView
            style="@style/TextStyleBlack17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingStart="@dimen/dimen24dp"
            android:text="Please collect your order at"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen6dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen32dp"
                android:layout_marginRight="@dimen/dimen32dp"
                android:text="1 June 2016"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:id="@+id/order_date" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen32dp"
                android:layout_marginStart="@dimen/dimen32dp"
                android:gravity="center"
                android:text="10:06 AM"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:id="@+id/order_time" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen24dp"
            android:paddingLeft="@dimen/dimen24dp"
            android:paddingRight="@dimen/dimen24dp"
            android:paddingStart="@dimen/dimen24dp"
            android:text="@string/text_please_provide_your_order_id_when_collecting_your_order"
            android:textSize="17sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@style/TextButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen24dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:background="@drawable/btn_ok"
        android:text="@string/text_ok"
        android:textAllCaps="true" />

</LinearLayout>