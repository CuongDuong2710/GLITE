<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.glite.popeyes.view.custom.VerdanaTextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_marginLeft="@dimen/dimen16dp"
        android:layout_marginStart="@dimen/dimen16dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:text="@string/msg_please_authenticate_to_proceed_with_payment"
        style="@style/TextStyleBlue14"/>

    <Button
        android:id="@+id/button_enter_pin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_normal"
        android:layout_below="@id/text_message"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dimen12dp"
        android:layout_marginBottom="@dimen/dimen32dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="88dp"
        android:background="@drawable/bg_rouge_selector"
        android:text="@string/text_enter_pin"
        style="@style/text.white.bold18sp"/>

</RelativeLayout>