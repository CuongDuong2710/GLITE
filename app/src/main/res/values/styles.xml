        <item name="android:drawablePadding">@dimen/dimen6dp</item>
        <item name="android:paddingLeft">@dimen/dimen10dp</item>
        <item name="android:paddingRight">@dimen/dimen10dp</item>
    </style>

    <style name="TextStyleBlue14">
        <item name="android:textColor">@color/marin_blue</item>
